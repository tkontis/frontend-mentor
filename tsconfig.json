{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": ["vite/client"]
  },
  "include": ["packages/**/src/**/*.{ts,tsx,css}"],
  "exclude": ["/node_modules", "dist", "**/*.d.ts"]
}
